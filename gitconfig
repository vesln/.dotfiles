[user]
  name = Veselin Todorov
  email = veselin@veselin.bg
[github]
  user = vesln
[alias]
  pr = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"
  unstage = reset HEAD
  track = "!f(){ branch=$(git name-rev --name-only HEAD); cmd=\"git branch --set-upstream-to=${1:-origin}/${2:-$branch} $branch\"; echo $cmd; $cmd; }; f"
  assume-unchanged = "update-index --assume-unchanged"
  unassume-unchanged = "update-index --no-assume-unchanged"
  list-assumed = "!f(){ git ls-files -v | grep '^h'; }; f"
[apply]
  whitespace = warn
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[help]
  autocorrect = 0
[status]
  submodule = 1
[merge]
  tool = vimdiff
  log = true
  prompt = false
[difftool]
  prompt = false
[push]
  default = tracking
[core]
  excludesfile = /Users/vesln/.gitignore_global
  trustctime = false
[branch]
  autosetuprebase = always
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
