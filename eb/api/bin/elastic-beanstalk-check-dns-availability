require File.join(File.dirname(__FILE__), 'setup.rb')
require 'aws/client/commandline'

AWS::Client::CommandLine.new do |client|
  client.service_call   = lambda { |params| @elasticbeanstalk.check_dns_availability(params) }
  client.result_key     = 'Availability'
  client.empty_response = 'DNS name unavailable.'
  
  client.option('-c', '--cname-prefix CNAMEPREFIX', 'CNAME prefix to check') do |cname_prefix|
    client.service_param('CNAMEPrefix', cname_prefix)
  end
end.run(ARGV)
